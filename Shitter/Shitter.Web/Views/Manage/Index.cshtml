@model Shitter.Web.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>

            @if (Model.HasPassword)
            {
             @Html.ActionLink("[ Change your password ]", "ChangePassword", new { @class = "black-text-link" })   
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
         
        </dd>
        <dt>Profile:</dt>
        <dd>
            [ @Html.ActionLink("Edit your profile", "EditProfile", "Home", null, new { @class = "black-text-link" }) ]
        </dd>
  
    </dl>
</div>
