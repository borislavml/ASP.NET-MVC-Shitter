<div id="delete-shitt" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title bold-text text-center">Are you sure you want to delete this shitt?</h4>
            </div>
            <div class="modal-footer">
                @using (Ajax.BeginForm("DeleteShitt", "Shitts", null,
                    new AjaxOptions
                    {
                        HttpMethod = "DELETE",
                        OnSuccess = "removeDeletedShitt",
                        OnFailure = "closeModalDialog"
                    }))
                {
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                    <input type="hidden" name="id" id="hidden-input-id" />
                    <input type="submit" value="Delete" class="btn btn-danger" id="confirm-delete-shitt-button">
                }
            </div>
        </div>
    </div>
</div>