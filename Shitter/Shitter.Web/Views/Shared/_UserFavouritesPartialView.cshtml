@using Microsoft.AspNet.Identity;
@using PagedList.Mvc;
@using PagedList;

@model PagedList.IPagedList<Shitter.Web.Models.Shitts.ShittViewModel>

@*DISPLAY ALL FOLLOWING*@
@Html.DisplayForModel()

@if (@Model.Count == 0)
{
    <div class="center"><h4 class="text-center">This user has no favourite shitts yet.</h4></div>
}
else
{
    @*PAGINATION*@
    <div class="center pagination-div ">
        @Html.PagedListPager(Model, page => Url.Action("Favourites", "Users", new { id = ViewData["user-id"], page }),
        PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions()
        {
            HttpMethod = "GET",
            //InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "favourites",
        }))
    </div>
}


